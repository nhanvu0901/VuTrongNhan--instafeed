<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="widget_shopify_mint">
      <field name="name">Widget shopify mint</field>
      <field name="model">widget.data</field>
      <field name="arch" type="xml">
        <tree>
           <field name="feed_title"/>
            <field name="spacing"/>
            <field name="on_post_click"/>
            <field name="layout"/>
            <field name="configuration"/>
            <field name="rows"/>
            <field name="columns"/>
            <field name="media_data"/>
            <field name="instagram_user"/>
            <field name="shopify_shop"/>
            <field name="showLikes"/>
            <field name="showFollwers"/>
            <field name="postToShow"/>
            <field name="displayTagPost"/>

             <field name="id_widget"/>
            <field name="is_display"/>


        </tree>
      </field>
    </record>



    <record model="ir.actions.act_window" id="widget_user_shopify_mint_action">
      <field name="name">widget action</field>
      <field name="res_model">widget.data</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Widget Data" id="menu_widget_shopify_mint_app" parent="menu_root"  action="widget_user_shopify_mint_action"/>



  </data>
</odoo>