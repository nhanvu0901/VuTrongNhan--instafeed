<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="product_shopify_mint">
      <field name="name">product shopify mint</field>
      <field name="model">hotspot.private</field>
      <field name="arch" type="xml">
        <tree>
           <field name="name"/>
            <field name="shopify_product_id"/>
            <field name="shopify_product_handle"/>
            <field name="shopify_product_img_src"/>
<!--            <field name="shopify_product_variant_num"/>-->

            <field name="shopify_product_product_url"/>
            <field name="shopify_product_price_range"/>

            <field name="admin"/>
            <field name="post"/>
            <field name="status"/>


        </tree>
      </field>
    </record>



    <record model="ir.actions.act_window" id="product_user_shopify_mint_action">
      <field name="name">product action</field>
      <field name="res_model">hotspot.private</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Hotspot" id="menu_product_shopify_mint_app" parent="menu_root"  action="product_user_shopify_mint_action"/>



  </data>
</odoo>